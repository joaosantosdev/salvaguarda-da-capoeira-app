<?xml version="1.0" encoding="utf-8"?>
<android.widget.ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="br.com.jovemdeveloper.salvaguardadacapoeira.view.Desenvolvedores">
    <LinearLayout
        android:background="@drawable/sombra"
        android:elevation="12dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:padding="20dp">

        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/sombra"
            android:layout_width="match_parent"
            android:elevation="16dp"
            android:layout_height="wrap_content">

            <LinearLayout

                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/centerColor"
                        android:text="Aplicativo para a Salvaguarda Da Capoeira do Ceará "
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Escola: EEEP José De Barcelos"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Desenvolvedor: João Santos"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Orientadores:\nMurilo da Paz\nOrismidio Duarte\nRenanh Araújo"
                        android:layout_marginTop="8dp"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
















    </LinearLayout>
</android.widget.ScrollView>