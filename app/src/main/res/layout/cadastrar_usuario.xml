<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="70dp"
    android:background="@drawable/gradiente"
    android:layout_height="match_parent"
    tools:context="br.com.jovemdeveloper.salvaguardadacapoeira.view.Login">
    <ImageView
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo"
        android:layout_height="150dp"
        android:layout_width="150dp"/>
    <TextView
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:text="Nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"/>
    <EditText
        android:textColor="@color/colorWhite"
        android:id="@+id/cadastrar_nome"
        android:inputType="text"
        android:layout_width="match_parent"
        android:backgroundTint="@color/colorTransparentWhite"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:text="Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"/>
    <EditText
        android:textColor="@color/colorWhite"
        android:id="@+id/cadastrar_email"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:backgroundTint="@color/colorTransparentWhite"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="8dp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:text="Senha"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"/>
    <EditText
        android:textColor="@color/colorWhite"
        android:id="@+id/cadastrar_senha"
        android:backgroundTint="@color/colorTransparentWhite"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="8dp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:text="Repetir senha"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"/>
    <EditText
        android:textColor="@color/colorWhite"
        android:id="@+id/cadastrar_rsenha"
        android:backgroundTint="@color/colorTransparentWhite"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <Button
        android:onClick="cadastrarUsuario"
        android:background="@drawable/design_button2"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Cadastrar"/>



</LinearLayout>