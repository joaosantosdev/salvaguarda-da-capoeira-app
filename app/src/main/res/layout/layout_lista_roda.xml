<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/sombra2"
    android:elevation="16dp"
    android:layout_marginBottom="3dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">
        <TextView
            android:textColor="@color/startColor"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do responsável:"/>
        <TextView
            android:textColor="@color/startColor"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grupo organizador:"/>
        <TextView
            android:textColor="@color/startColor"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dia da semana:"/>
        <TextView
            android:textColor="@color/startColor"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telefone:"/>

        <TextView
            android:textColor="@color/startColor"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horário:"/>






    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:textStyle="bold"
            android:id="@+id/txtResponsavel_layout_lista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telefone:"/>
        <TextView
            android:textStyle="bold"
            android:id="@+id/txtGrupo_layout_lista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Endereço:"/>
        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtDia_layout_lista"
            android:text="Dia da semana:"/>
        <TextView
            android:textStyle="bold"
            android:id="@+id/txtTelefone_layout_lista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telefone:"/>
        <TextView
            android:textStyle="bold"
            android:id="@+id/txtHorario_layout_lista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Endereço:"/>



    </LinearLayout>

</LinearLayout>
    <Button
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="30dp"
        android:text="Ver no mapa"
        android:id="@+id/btnVerNoMapa"
        android:background="@drawable/design_button"/>

</LinearLayout>