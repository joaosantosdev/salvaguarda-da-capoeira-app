<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:padding="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:text="País"
        android:layout_height="wrap_content" />
    <EditText
        android:inputType="textAutoCorrect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/psqRodaPais"/>


    <TextView
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:text="Estado"
        android:layout_height="wrap_content" />
    <EditText
        android:inputType="textAutoCorrect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/psqRodaEstado"/>



    <TextView
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:text="Cidade"
        android:layout_height="wrap_content" />
    <EditText
        android:inputType="textAutoCorrect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/psqRodaCidade"/>

    <TextView
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:text="Bairro"
        android:layout_height="wrap_content" />
    <EditText
        android:inputType="textAutoCorrect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/psqRodaBairro"/>



    <TextView
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:text="Rua e Nº"
        android:layout_height="wrap_content" />
    <EditText
        android:inputType="textAutoCorrect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/psqRodaRua"/>

    <Button
        android:id="@+id/btnPsq"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textColor="@color/colorWhite"
        android:background="@color/centerColor"
        android:text="Pesquisar"/>

</LinearLayout>