<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.com.joao.salvaguardadacapoeira_ce.br.ltj.joao.salvaguardadacapoeira_ce.view.VisualizarCapoeiristas">
    <android.support.v7.widget.SearchView
        android:background="@drawable/sombra2"

        android:layout_width="match_parent"
        android:id="@+id/srchCapoeirista"
        android:layout_marginBottom="3dp"
        android:layout_height="wrap_content">

    </android.support.v7.widget.SearchView>
    <android.support.v7.widget.RecyclerView

        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lstCapoeiristas">


    </android.support.v7.widget.RecyclerView>
</android.widget.LinearLayout>
